<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    >


    <ImageView
        android:id="@+id/secondImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/user"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        />

    <TextView
        android:id="@+id/secondUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username 2"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/secondImage"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/secondPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1666"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/secondUsername"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/secondLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="level 244"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/secondPoints"
        app:layout_constraintLeft_toLeftOf="parent"
        />




    <ImageView
        android:id="@+id/firstImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/user"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


    <TextView
        android:id="@+id/firstUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username 1"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstImage"
        />

    <ImageView
        android:id="@+id/thirdImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/user"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />


    <TextView
        android:id="@+id/thirdUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username 3"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/secondImage"
        app:layout_constraintRight_toRightOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>