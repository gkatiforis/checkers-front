    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rank_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@+id/criteriaPanel"
        app:layout_constraintBottom_toTopOf="@+id/currentPlayerPanel"
        tools:showIn="@layout/fragment_rank_layout"
        />

    <include
        android:id="@+id/currentPlayerPanel"
        layout="@layout/item_rank_current_player_layout"
        app:layout_constraintTop_toBottomOf="@+id/rank_list"
        app:layout_constraintBottom_toTopOf="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


