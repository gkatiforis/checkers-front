<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/row_padding_vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/row_padding_vertical"
    android:id="@+id/relativeLayout">


    <ImageView
        android:id="@+id/userImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/user"
        app:layout_constraintTop_toBottomOf="@+id/date"
        />

    <TextView
        android:id="@+id/usernameStats"
        android:gravity="left"
        android:layout_height="fill_parent"
        android:layout_width="wrap_content"
        android:textColor="@color/title"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text="username"
        app:layout_constraintLeft_toRightOf="@+id/userImage"/>

    <TextView
        android:id="@+id/pointsStats"
        android:gravity="left"
        android:layout_height="fill_parent"
        android:layout_width="wrap_content"
        android:inputType="textMultiLine"
        android:paddingLeft="10px"
        android:textColor="@color/title"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text="2555"
        app:layout_constraintLeft_toRightOf="@+id/usernameStats"/>

    <TextView
        android:id="@+id/pointsExtra"
        android:gravity="left"
        android:layout_height="fill_parent"
        android:layout_width="wrap_content"
        android:inputType="textMultiLine"
        android:paddingLeft="10px"
        android:textColor="@color/fbutton_color_belize_hole"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text="+25"
        app:layout_constraintLeft_toRightOf="@+id/pointsStats"/>

</androidx.constraintlayout.widget.ConstraintLayout>