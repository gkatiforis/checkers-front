    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/player_stats_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constrainedHeight="true"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@+id/rank_panel_title"
        tools:showIn="@layout/fragment_game_stats_layout"/>


    <info.hoang8f.widget.FButton
        android:id="@+id/restartGame"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        fbutton:buttonColor="@color/fbutton_color_alizarin"
        fbutton:shadowEnabled="true"
        android:textColor="@android:color/black"
        android:text="Play again ("
        app:layout_constraintTop_toBottomOf="@+id/player_stats_list"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        />

    <info.hoang8f.widget.FButton
        android:id="@+id/returnToMenu"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restartGame"
        android:textColor="@android:color/black"
        fbutton:shadowEnabled="true"
        android:text="Main menu"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".48"
        />

        <info.hoang8f.widget.FButton
            android:id="@+id/newOpponent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@+id/restartGame"
            app:layout_constraintLeft_toRightOf="@+id/returnToMenu"
            app:layout_constraintBottom_toBottomOf="parent"
            fbutton:shadowEnabled="true"
            android:text="New opponent"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="7dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="0dp"

            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".48"
