               <!--/>-->

    <TextView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:background="@color/fbutton_color_alizarin"
        android:drawableLeft="@drawable/google_icon"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:padding="10dp"


        android:singleLine="true"
        android:text="Login with Google and save your progress"
        android:textColor="@color/tab_unchecked"
        app:layout_constraintTop_toBottomOf="@+id/settingButton" />


    <ImageView
        android:id="@+id/playerImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login"
        />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:textStyle="bold"
        android:text="eee"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerImage"
        />

    <LinearLayout
        android:id="@+id/userPan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username">

        <include
            android:id="@+id/user_elo"
            layout="@layout/item_main_user_elo_layout"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/user_panel" />


        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/user_lvl_chart"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="30dp"
            app:layout_constraintLeft_toRightOf="@+id/user_elo"
            app:layout_constraintTop_toBottomOf="@+id/user_panel" />

        <include
            android:id="@+id/user_coins"
            layout="@layout/item_main_user_coins_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            app:layout_constraintLeft_toRightOf="@+id/user_lvl_chart"
            app:layout_constraintTop_toBottomOf="@+id/user_panel" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
